<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.tomasulo.controller.ConfigurationController"
      spacing="10" style="-fx-padding: 20;">
    <GridPane hgap="10" vgap="10">
        <Label text="Instruction Operations" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
        
        <Label text="ADD:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="addLatency" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="SUB:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="subLatency" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="MUL:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="mulLatency" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="DIV:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="divLatency" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Label text="LOAD:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="loadLatency" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label text="STORE:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="storeLatency" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
        
        <Label text="Cache Parameters" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2"/>
        
        <Label text="Cache Size:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <TextField fx:id="cacheSize" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
        
        <Label text="Block Size:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
        <TextField fx:id="blockSize" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
        
        <Label text="Hit Latency:" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
        <TextField fx:id="hitLatency" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
        
        <Label text="Miss Latency:" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
        <TextField fx:id="missLatency" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
        
        <Label text="Buffer Sizes" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="12" GridPane.columnSpan="2"/>
        
        <Label text="Add/Sub Stations:" GridPane.columnIndex="0" GridPane.rowIndex="13"/>
        <TextField fx:id="addSubStations" GridPane.columnIndex="1" GridPane.rowIndex="13"/>
        
        <Label text="Mul/Div Stations:" GridPane.columnIndex="0" GridPane.rowIndex="14"/>
        <TextField fx:id="mulDivStations" GridPane.columnIndex="1" GridPane.rowIndex="14"/>
        
        <Label text="Load Buffers:" GridPane.columnIndex="0" GridPane.rowIndex="15"/>
        <TextField fx:id="loadBuffers" GridPane.columnIndex="1" GridPane.rowIndex="15"/>
        
        <Label text="Store Buffers:" GridPane.columnIndex="0" GridPane.rowIndex="16"/>
        <TextField fx:id="storeBuffers" GridPane.columnIndex="1" GridPane.rowIndex="16"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>